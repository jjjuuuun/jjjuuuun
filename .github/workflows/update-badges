name: Update Readme Actions
on:
  workflow_dispatch:
jobs:
  update-readme:
    name: Update Readme with Metrics
    runs-on: ubuntu-latest
    steps:
      - name: Badges - README
        uses: pemtajo/badge-readme@main
        with:
          CREDLY_USER: "junyoung-kim"
          GH_TOKEN: ${{ secrets.GH_TOKEN }}
